<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" >


        <RelativeLayout
            android:id="@+id/task_item_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackgroundLight"
            android:padding="20dp">


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/student_group_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="10dp"
                android:text="Шаблон названия"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/student_group_item_target_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/student_group_item_name"
                android:layout_alignStart="@+id/student_group_item_name"
                android:layout_marginTop="6dp"
                android:text="Шаблон целевого предмета"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/materialTextView2"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_below="@+id/student_group_item_target_subject"
                android:layout_marginStart="2dp"
                android:layout_marginTop="10dp"
                android:text="Учитель:"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/materialTextView3"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_below="@+id/materialTextView2"
                android:layout_marginStart="2dp"
                android:layout_marginTop="6dp"
                android:text="Почта:"
                android:textColor="@color/black"
                android:textSize="16sp" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/student_group_item_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignTop="@+id/student_item_gender"
                android:layout_marginStart="8dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/student_group_item_id"
                android:layout_toEndOf="@+id/student_item_gender"
                android:text="Шаблон описания"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/student_item_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/student_group_email_teacher"
                android:layout_marginStart="2dp"
                android:layout_marginTop="10dp"
                android:text="Описание:"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/student_group_full_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignTop="@+id/materialTextView2"
                android:layout_marginStart="8dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/materialTextView2"
                android:text="ФИО"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/student_group_email_teacher"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/materialTextView3"
                android:layout_marginStart="8dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/materialTextView3"
                android:text="Почта"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/student_group_item_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/student_group_item_name"
                android:layout_alignBottom="@+id/student_group_item_name"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:text="#id"
                android:textColor="@color/gray"
                android:textSize="18sp" />
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>