<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" >


        <RelativeLayout
            android:id="@+id/task_item_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackgroundLight"
            android:padding="20dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/student_item_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Учени(к/ца)"
                android:textColor="@color/gray"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="16dp"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/student_item_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/student_item_gender"
                android:text="#id"
                android:textColor="@color/gray"
                android:textSize="18sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/student_item_firstname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/student_item_gender"
                android:text="Имя"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"/>


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/student_item_lastname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/student_item_firstname"
                android:layout_alignBottom="@+id/student_item_firstname"
                android:layout_toEndOf="@+id/student_item_firstname"
                android:text="Фамилия"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />



            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/student_item_firstname"
                android:layout_marginStart="10dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="6dp">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Почта:"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginRight="6dp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/student_item_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="mail@mail.mail"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="6dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Возраст:"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginRight="6dp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/student_item_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>

                </TableRow>



                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="6dp">
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/group_item_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Сделанные Д/З:"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginRight="6dp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/student_item_complete_homeworks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6/12"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>
                </TableRow>

            </TableLayout>





        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>